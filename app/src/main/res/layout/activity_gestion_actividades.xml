<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2EFE5">

    <ScrollView
        android:id="@+id/formularioScroll"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center">

        <EditText
            android:id="@+id/edtActividadID"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />

        <Spinner
            android:id="@+id/spinnerMateria"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/spinner_background"
            android:padding="12dp"
            android:spinnerMode="dropdown"/>


        <EditText
            android:id="@+id/edtTitulo"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Título de la Actividad"
            android:inputType="text"
            android:padding="12dp"
            android:textColor="#2C5C60"
            android:textColorHint="#7A9CA5"
            android:background="@drawable/edittext_background"/>

        <EditText
            android:id="@+id/edtDescripcion"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Descripción"
            android:inputType="text"
            android:padding="12dp"
            android:textColor="#2C5C60"
            android:textColorHint="#7A9CA5"
            android:background="@drawable/edittext_background"/>

        <Spinner
            android:id="@+id/spinnerTipo"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/spinner_background"
            android:padding="12dp"
            android:spinnerMode="dropdown"/>


        <EditText
            android:id="@+id/edtFechaEntrega"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Fecha de Entrega (YYYY-MM-DD HH:MM:SS)"
            android:inputType="datetime"
            android:padding="12dp"
            android:textColor="#2C5C60"
            android:textColorHint="#7A9CA5"
            android:background="@drawable/edittext_background"/>

        <EditText
            android:id="@+id/edtValorTotal"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Valor Total"
            android:inputType="numberDecimal"
            android:padding="12dp"
            android:textColor="#2C5C60"
            android:textColorHint="#7A9CA5"
            android:background="@drawable/edittext_background"/>



        <!-- Botones -->
        <Button
            android:id="@+id/btnRegistrarActividad"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Registrar Actividad" />

        <Button
            android:id="@+id/btnEditarActividad"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Editar Actividad"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_background"
            android:padding="12dp"
            android:layout_marginTop="12dp"/>

        <Button
            android:id="@+id/btnEliminarActividad"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Eliminar Actividad"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_background"
            android:padding="12dp"
            android:layout_marginTop="12dp"/>

    </LinearLayout>

    </ScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerActividades"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="visible"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAgregarActividad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:contentDescription="Agregar actividad"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/bottom_nav_icon_color"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent" />


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#F2EFE5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/menu_bottom_nav"
        app:itemIconTint="@color/bottom_nav_icon_color"
        app:itemTextColor="@color/bottom_nav_icon_color" />
</androidx.constraintlayout.widget.ConstraintLayout>