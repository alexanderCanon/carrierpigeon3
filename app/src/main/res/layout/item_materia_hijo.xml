<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginTop="6dp"
    android:layout_marginHorizontal="16dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="4dp"
    card_view:cardBackgroundColor="#F9F9F9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvNombreMateria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre de la Materia"
            android:textColor="#2C5C60"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvGradoSeccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Grado - SecciÃ³n"
            android:textColor="#555555"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/btnVerNotas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ver Notas"
                android:textAllCaps="false"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="8dp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:layout_gravity="center_vertical" />

            <Button
                android:id="@+id/btnVerAsistencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ver Asistencia"
                android:textAllCaps="false"
                android:backgroundTint="#2196F3"
                android:textColor="#FFFFFF"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:layout_gravity="center_vertical" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

